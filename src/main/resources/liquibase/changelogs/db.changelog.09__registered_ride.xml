<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="1" author="dmitry" context="main">
        <createTable tableName="registered_ride">

            <column name="id" type="BIGINT" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="route_id" type="BIGINT">
                <constraints  nullable="false"/>
            </column>

            <column name="token_id" type="BIGINT">
                <constraints  nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="2" author="dmitry" >
        <addForeignKeyConstraint baseColumnNames="route_id"
                                 baseTableName="registered_ride"
                                 constraintName="fk_route_id_for_ride"
                                 onDelete="RESTRICT"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="route_id"
                                 referencedTableName="trip"/>
    </changeSet>

    <changeSet id="3" author="dmitry" >
        <addForeignKeyConstraint baseColumnNames="token_id"
                                 baseTableName="registered_ride"
                                 constraintName="fk_token_id_for_ride"
                                 onDelete="RESTRICT"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="token_id"
                                 referencedTableName="authorisation_tokens"/>
    </changeSet>

    <changeSet id="4" author="dmitry">
        <createSequence sequenceName="registered_ride_sec" startValue="100"/>
    </changeSet>

</databaseChangeLog>